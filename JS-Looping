//buatlah tampilan teks 'user ke-1 ....user ke-100' di html dengan javascript
#1

for( let i = 0; i <= 100 ; i++){
     	document.write("<h3> User ke-" + i + "</h3>")
}



//penambahan nilai 10x dengan tambahan 2 angka setiap pengulangan
#2
for( let i = 0; i <= 20 ; i+=2){
     	console.log( i)
}


//tampilkan keterangan angka ganjil/genap dalam setiap pengulangan dari 0...20
#3
for( let i = 0; i <= 20 ; i++){
	if(i % 2 == 0){
	  console.log(i + "Angka genap");}
	else if(i % 2 == 1){
	   console.log(i + "Angka ganjil");
	}
}

//Tampilkan teks konfirmasi pada user
#4

let yes=confirm("udah mandi belum?");
let no = 0;
	
	while(true){
yes=confirm("mau ulang lagi ?");
   no++;
	if(yes==false){
	alert("loopingnya udah"+no+" kali, lanjut ga?");}
}


//Buat sebuah program kuis :
Tampilkan prompt() untuk meminta inputan dari user. Tampilan teks ‘Sebutkan kepanjangan dari nama IB (Impact Byte)?’
Lakukan pengecekan apakah jawaban dari user sudah benar
Jika benar, tampilkan alert ‘Selamat jawaban kamu benar’
Jika salah, lakukan pengulangan untuk menampilkan prompt() yg sama hingga jawaban dari user benar.

#5
let input=prompt("Sebutkan kepanjangan dari nama IB?");

	do{
	input=prompt("salah, coba lagi!");
}

while(input!="impact byte");
alert("sip, jawabanmu benar! Selamat kamu mendapat 1juta rupiahhh!!!");
